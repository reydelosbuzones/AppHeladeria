<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="etStyle">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="tvStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvDetTitle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/fontM</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvDetItem">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">@dimen/fontL</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="footer">
        <item name="android:layout_margin">5sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="btnAzul">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/marg10</item>
        <item name="android:background">@drawable/roundedbtn_blue</item>
    </style>

    <style name="btnVerde">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/marg10</item>
        <item name="android:background">@drawable/roundedbtn_verde</item>
    </style>

    <style name="btnRojo">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/marg10</item>
        <item name="android:background">@drawable/roundedbtn_red</item>
    </style>
</resources>
